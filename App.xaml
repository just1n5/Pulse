<Application x:Class="PulseLogin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PulseLogin"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Incluir recursos de estilos generales -->
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Fonts.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/TextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Colores principales -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#4A76A8"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#2C3440"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#4A76A8"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="ForegroundBrush" Color="#333333"/>
            
            <!-- Colores de estado -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
            
            <!-- Fuentes -->
            <FontFamily x:Key="InterFont">/Assets/Fonts/Inter-Regular.ttf#Inter</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>